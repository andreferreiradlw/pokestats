{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/BaseStyles": ["src/components/BaseStyles"],
      "@/BaseStyles/*": ["src/components/BaseStyles/*"],
      "@/components": ["src/components"],
      "@/components/*": ["src/components/*"],
      "@/theme": ["src/components/theme"],
      "@/MuiTheme": ["./theme"],
      "@/cothememponents/*": ["src/components/theme/*"],
      "@/helpers": ["src/helpers"],
      "@/helpers/*": ["src/helpers/*"],
      "@/types": ["types"],
      "@/types/*": ["types/*"],
      "@/pages": ["src/pages"],
      "@/pages/*": ["src/pages/*"],
      "@/hooks": ["src/hooks"],
      "@/hooks/*": ["src/hooks/*"],
      "@mui/styled-engine": ["./node_modules/@mui/styled-engine-sc"] // this mapping is relative to "baseUrl"
    },
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["types/*.d.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "src/**/*.js", "src/**/*.jsx"]
}
